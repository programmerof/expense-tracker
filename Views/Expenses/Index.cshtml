@model IEnumerable<ExpenseTracker.Models.Expense>
@{
    ViewData["Title"] = "Expenses";
}
<div class="container mt-4">
    <h2>Expenses</h2>
    <a href="/Expenses/Create" class="btn btn-primary mb-3">Add New Expense</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Title</td>
                <td>@expense.Amount</td>
            <td>@expense.Category</td>
                <td>
                    <a href="/Expenses/Edit/@expense.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Expenses/Delete/@expense.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
